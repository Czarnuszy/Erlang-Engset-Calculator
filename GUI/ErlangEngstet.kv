#: import CheckBox kivy.uix.checkbox

<CustomPopup>:
    size_hint: .75, .75
    auto_dismiss: False
    title: "Help"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Erlang Method"
            haling: "center"
        Label:
            text: "Traffic: The traffic in Erlangs"
        Label:
            text: "Lines: The number of servers"
        Label:
            text: "Blocking rate: Probability of blocking the network"
        Label:
            text_size: self.size
            halign: "center"
            text: " To proper calculation we recommend to use FLOAT values of 'Traffic' or 'Blocking Rate' and INTEGER values of 'Lines'."
        Label:
            text_size: self.size
            halign: 'center'
            text: " You can chose which parameter to calculate by clicking proper RadioButton, once parameter input would be set as disabled after."
        Button:
            text: "Close"
            on_press: root.dismiss()

<EngsetPopup>:
    size_hint: .75, .75
    auto_dismiss: False
    title: "Help"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Engset Method"
            haling: "center"
        Label:
            text: "Traffic: The traffic in Erlangs"
        Label:
            text: "Lines: The number of servers"
        Label:
            text: "Blocking rate: Probability of blocking the network"
        Label:
            text: "Sources: the number of points generating the traffic"

        Label:
            text_size: self.size
            halign: "center"
            text: " To proper calculation we recommend to use FLOAT values of 'Traffic' or 'Blocking Rate' and INTEGER value of 'Lines' or 'Sources'."
        Label:
            text_size: self.size
            halign: "center"
            text: " You can chose which parameter to calculate by clicking proper RadioButton, once parameter input would be set as disabled after."

        Button:
            text: "Close"
            on_press: root.dismiss()




<MyPageLayout>:
    border: 75
    swipe_threshold: .0001
    BoxLayout:
        orientation: "vertical"
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        padding: 15
        spacing: 15
        Button:
            text: "Help"
            size_hint_x: .20
            size_hint_y: .15
            on_press: root.open_popup('erlang')
        Label:
            text: "Erlang"
            font_size: "40sp"
            halign: 'center'

        BoxLayout:
            size_hint_y: None
            height: "40dp"

            Label:
                text: "Traffic"

            CheckBox:
                group: "erlang"
                on_active: root.ReadOnly('traffic', 'erlang')
                allow_no_selection: False

            Label:
                text: "Lines"

            CheckBox:
                group: "erlang"
                on_active: root.ReadOnly('lines', 'erlang')
                allow_no_selection: False

            Label:
                text: "Blocking Rate"

            CheckBox:
                group: "erlang"
                active: True
                on_active: root.ReadOnly('block', 'erlang')
                allow_no_selection: False

        BoxLayout:
            size_hint_y: None
            height: "40dp"

            Label:
                text: "Traffic"
            TextInput:
                id: traffic_input
                multiline: False
                write_tab: False


            Label:
                text: "Lines"
            TextInput:
                id: lines_input
                multiline: False
                write_tab: False



            Label:
                text: "Blocking Rate"

            TextInput:
                id: block_rate_input
                multiline: False
                write_tab: False
                readonly: True


        BoxLayout:
            size_hint_y: None
            height: "40dp"
            Button:
                text: "Caltulate"
                on_press: root.calculate('erlang')
            Label:
                text: "Result:"
            TextInput:
                id: result
                readonly: True

        BoxLayout:



    BoxLayout:
        orientation: "vertical"
        canvas:
            Color:
                rgba: .2, .2, .2, 1
            Rectangle:
                pos: self.pos
                size: self.size
        padding: 10
        spacing: 10
        Button:
            text: "Help"
            size_hint_x: .20
            size_hint_y: .15
            on_press: root.open_popup('engset')
        Label:
            text: "Engset"
            font_size: "40sp"
            halign: 'center'

        BoxLayout:
            size_hint_y: None
            height: "40dp"


            Label:
                text: "Traffic"

            CheckBox:
                group: "engset"
                on_active: root.ReadOnly('traffic', 'engset')
                allow_no_selection: False

            Label:
                text: "Lines"

            CheckBox:
                group: "engset"
                on_active: root.ReadOnly('lines', 'engset')
                allow_no_selection: False

            Label:
                text: "Blocking Rate"

            CheckBox:
                group: "engset"
                active: True
                on_active: root.ReadOnly('block', 'engset')
                allow_no_selection: False

        BoxLayout:
            size_hint_y: None
            height: "40dp"

            Label:
                text: "Traffic"
            TextInput:
                id: engset_traffic
                multiline: False
                write_tab: False


            Label:
                text: "Lines"
            TextInput:
                id: engset_lines
                multiline: False
                write_tab: False

            Label:
                text: "Sources"

            TextInput:
                id: sources
                multiline: False
                write_tab: False


            Label:
                text: "Blocking Rate"

            TextInput:
                id: engset_block
                multiline: False
                write_tab: False
                readonly: True



        BoxLayout:
            size_hint_y: None
            height: "40dp"
            Button:
                text: "Caltulate"
                on_press: root.calculate('engset')
            Label:
                text: "Result:"
            TextInput:
                id: engset_result
                readonly: True

        BoxLayout:

    BoxLayout:
        canvas:
            Color:
                rgba: .4, .4, .4, 1
            Rectangle:
                pos: self.pos
                size: self.size
        padding: 10
        spacing: 10
        orientation: "vertical"
        Button:
            text: "Help"
            size_hint_x: .20
            size_hint_y: .15
            on_press: root.open_popup('chart')
        Label:
            text: "Chart Generator"
            font_size: "40sp"
            halign: 'center'
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Traffic:"
                BoxLayout:
                    size_hint_y: None
                    height: "40dp"
                    Label:
                        text:"min:"
                    TextInput:
                        text: "3.4"
                        id: min_traffic
                        write_tab: False
                        multiline: False
                BoxLayout:
                    size_hint_y: None
                    height: "40dp"
                    Label:
                        text:"max:"
                    TextInput:
                        text: "123.4"
                        id: max_traffic
                        write_tab: False
                        multiline: False
                BoxLayout:
                    size_hint_y: None
                    height: "40dp"
                    Label:
                        text: "Step by:"
                    Spinner:
                        text: "1.0"
                        values: ['0.1', '0.5', '1.0', '1.5', '2.0','5.0']
                        id: spinner_id
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Lines: "
                BoxLayout:
                    size_hint_y: None
                    height: "40dp"
                    Label:
                        text:"1: "
                    TextInput:
                        text: "10"
                        id: line_one_input
                        write_tab: False
                        multiline: False
                    CheckBox:
                        group: "graph"
                        active: True
                        on_active: root.GraphLines(1)
                        allow_no_selection: False
                BoxLayout:
                    size_hint_y: None
                    height: "40dp"
                    Label:
                        text:"2: "
                    TextInput:
                        id: line_two_input
                        readonly: True
                        write_tab: False
                        multiline: False
                    CheckBox:
                        group: "graph"
                        on_active: root.GraphLines(2)
                        allow_no_selection: False

                BoxLayout:
                    size_hint_y: None
                    height: "40dp"
                    Label:
                        text: "3: "
                    TextInput:
                        id: line_three_input
                        readonly: True
                        write_tab: False
                        multiline: False
                    CheckBox:
                        group: "graph"
                        on_active: root.GraphLines(3)
                        allow_no_selection: False

                BoxLayout:
                    size_hint_y: None
                    height: "40dp"
                    Label:
                        text: "4: "
                    TextInput:
                        id: line_four_input
                        readonly: True
                        write_tab: False
                        multiline: False
                    CheckBox:
                        group: "graph"
                        on_active: root.GraphLines(4)
                        allow_no_selection: False


        Button:
            text: "Generate"
            size_hint_y: .15
            on_press: root.generate()
